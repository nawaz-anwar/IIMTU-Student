<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="14dp"
    android:background="#9052FF"
    tools:context=".nav_header_Activity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/studentImageProfile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/manimg" />

    <TextView
        android:id="@+id/studentNameProfile"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="3dp"
        android:text="Student Name"
        android:textColor="#fff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Id"
        android:textSize="14sp"
        android:id="@+id/studentEmailIdProfile"
        android:textColor="#fff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Roll Number"
        android:textSize="14sp"
        android:id="@+id/studentRollNumberProfile"
        android:textColor="#fff"/>

</LinearLayout>